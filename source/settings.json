  "fonts": [
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Montserrat"
    },
    {
      "variable": "secondary_font",
      "label": "Secondary Font",
      "default": "Montserrat"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#EEEEEE"
    },
    {
      "variable": "content_background_color",
      "label": "Content background",
      "default": "#FFFFFF"
    },
    {
      "variable": "accent_background_color",
      "label": "Accent background",
      "default": "#000000"
    },
    {
      "variable": "accent_text_color",
      "label": "Accent text color",
      "default": "#FFFFFF"
    },
    {
      "variable": "accent_pattern_color",
      "label": "Accent pattern color",
      "default": "#555555"
    },
    {
      "variable": "primary_text_color",
      "label": "Primary text color",
      "default": "#222222"
    },
    {
      "variable": "secondary_text_color",
      "label": "Secondary text color",
      "default": "#0b639a"
    },
    {
      "variable": "button_text_color",
      "label": "Button & status text color",
      "default": "#FFFFFF"
    },
    {
      "variable": "button_background_color",
      "label": "Button background color",
      "default": "#0b639a"
    },
    {
      "variable": "status_background_color",
      "label": "Product status background color",
      "default": "#C43F06"
    },
    {
      "variable": "links_color",
      "label": "Link hover color",
      "default": "#FF642A"
    },
    {
      "variable": "announcement_text_color",
      "label": "Announcement Message Text",
      "default": "#FFFFFF"
    },
    {
      "variable": "announcement_background_color",
      "label": "Announcement Message Background",
      "default": "#000000"
    }
  ],
  "options": [
   {
      "variable": "maintenance_message",
      "label": "Maintenance mode message",
      "type": "text",
      "description": "A message visitors see when your shop is in Maintenance Mode",
      "default": "We're working on our shop right now.<br /><br />Please check back soon."
    },
    {
      "variable": "announcement_message_text",
      "label": "Announcement text",
      "type": "text",
      "description": "Displays an announcement message on the top of every page"
    },
    {
      "variable": "welcome_header",
      "label": "Welcome header",
      "type": "text",
      "description": "Welcome header for homepage"
    },
    {
      "variable": "welcome_subheader",
      "label": "Welcome subheader",
      "type": "text",
      "description": "Welcome subheader for homepage"
    },
    {
      "variable": "pattern_style",
      "label": "Accent Pattern Style",
      "type": "select",
      "options": [
        ["Small Triangles", "small-triangles"],
        ["Large Triangles", "large-triangles"],
        ["Autumn", "autumn"],
        ["Bank Note", "bank-note"],
        ["Bathroom Floor", "bathroom-floor"],
        ["Bubbles", "bubbles"],
        ["Diagonal Lines", "diagonal-lines"],
        ["Kiwi", "kiwi"],
        ["Random Shapes", "random-shapes"],
        ["Wiggle", "wiggle"],
        ["No Pattern", "no-pattern"]
      ],
      "default": "small-triangles",
      "description": "Pattern style for the accent background"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": true,
      "description": "Shows a search field"
    },
    {
      "variable": "collections",
      "label": "Enable collections",
      "type": "boolean",
      "default": false,
      "description": "Use category collections instead of the traditional product listing page"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product options",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product options in the Product page dropdowns",
      "requires": "inventory"
    },
    {
      "variable": "nav_items",
      "label": "Navigation items",
      "type": "select",
      "options": "0..2",
      "default": 1,
      "description": "The number of custom page links show in the main navigation."
    },
    {
      "variable": "featured_items_type",
      "label": "Featured items type",
      "type": "select",
      "options": ["Categories", "Products"],
      "default": "Products",
      "description": "Display featured products or categories on the Home page"
    },
    {
      "variable": "featured_items",
      "label": "Featured items",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of items featured on the Home page"
    },
    {
      "variable": "grid_image_style",
      "label": "Product grid image style",
      "type": "select",
      "options": [
        ["Fit to square", "contain"],
        ["Crop to square", "cover"]
      ],
      "default": "cover",
      "description": "Sets the display of images in the product grid"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 48,
      "description": "The number of products shown per page"
    },
    {
      "variable": "product_image_zoom",
      "label": "Enable product image zoom",
      "type": "boolean",
      "default": true,
      "description": "Click to open a larger version of the Product page image"
    },
    {
      "variable": "desktop_product_page_images",
      "label": "Desktop product page images",
      "type": "select",
      "options": [
        ["Thumbnails", "thumbnails"],
        ["Carousel", "carousel"],
        ["Stacked 2 column", "two-column"],
        ["Stacked full width", "stacked"]
      ],
      "default": "carousel",
      "description": "Sets the display of the Product page gallery"
    },
    {
      "variable": "mobile_product_page_images",
      "label": "Mobile product page image carousel",
      "type": "select",
      "options": [
        ["Show thumbnails", "show-thumbnails"],
        ["Hide thumbnails", "hide-thumbnails"]
      ],
      "default": "show-thumbnails",
      "description": "Choose to hide or show thumbnails on the mobile Product page carousel"
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: https://instagram.com/bigcartel"
    },
    {
      "variable": "tiktok_url",
      "label": "TikTok URL",
      "type": "text",
      "description": "Ex: https://tiktok.com/@bigcartelofficial"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: https://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: https://facebook.com/bigcartel"
    },
    {
      "variable": "snapchat_url",
      "label": "Snapchat URL",
      "type": "text",
      "description": "Ex: https://snapchat.com/add/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: https://pinterest.com/big_cartel"
    },
    {
      "variable": "youtube_url",
      "label": "YouTube URL",
      "type": "text",
      "description": "Ex: https://youtube.com/@BigCartelDotCom"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: https://bigcartel.tumblr.com"
    },
    {
      "variable": "bandcamp_url",
      "label": "Bandcamp URL",
      "type": "text",
      "description": "Ex: https://bigcartel.bandcamp.com"
    }
  ],
  "checkout": {
    "header_image": "{{ logo }}",
    "header_image_max_width": "300px",
    "header_image_max_height": "100px",
    "title_font": "{{ primary_font }}",
    "title_font_weight": "normal",
    "title_font_size": "22px",
    "title_color": "{{ primary_text_color }}",
    "title_background_color": "{{ content_background_color }}",
    "title_vertical_padding": "27px",
    "background_color": "{{ background_color }}",
    "body_font": "{{ secondary_font }}",
    "body_font_size": "14px",
    "step_border_color": "{{ background_color }}",
    "step_border_width": "4px",
    "step_border_style": "solid",
    "step_border_radius": "0px",
    "step_inactive_header_color": " {{ primary_text_color }}",
    "step_header_font": "{{ primary_font }}",
    "step_background_color": "{{ content_background_color }}",
    "content_background_color": "{{ content_background_color }}",
    "content_header_background_color": "{{ content_background_color }}",
    "content_header_color": "{{ primary_text_color }}",
    "content_color": "{{ primary_text_color }}",
    "content_header_font_size": "18px",
    "content_border_color": "transparent",
    "content_border_radius": "0px",
    "error_background_color": "#950f1e",
    "error_font_size": "14px",
    "error_color": "#ffffff",
    "error_border_radius": "0px",
    "error_border_color": "#950f1e",
    "input_focus_color": "#000000",
    "input_focus_background_color": "#ffffff",
    "input_focus_border_color": "#777777",
    "input_error_border_color": "#950f1e",
    "input_color": "#000000",
    "input_error_color": "#000000",
    "input_border_color": "#bfbfbf",
    "input_background_color": "#ffffff",
    "input_error_background_color": "#ffffff",
    "input_border_radius": "0px",
    "input_border_width": "2px",
    "input_font": "{{ secondary_font }}",
    "button_color": "{{ button_text_color }}",
    "button_border_width": "0px",
    "button_border_radius": "0px",
    "button_font": "{{ secondary_font }}",
    "button_hover_color": "{{ button_text_color }}",
    "button_background_color": "{{ button_background_color }}",
    "button_hover_background_color": "opacify({{ button_background_color }}, 0.8)",
    "button_text_transform": "none",
    "link_color": "{{ secondary_text_color }}",
    "link_hover_color": "{{ links_color }}",
    "step_header_color": "{{ primary_text_color }}",
    "step_header_font_size": "18px",
    "summary_color": "{{ primary_text_color }}",
    "summary_secondary_color": "{{ primary_text_color }}",
    "summary_item_border_color": "{{ background_color }}",
    "summary_item_list_border_color": "{{ background_color }}",
    "summary_submit_background_color": "{{ content_background_color }}",
    "summary_submit_border_color": "{{ background_color }}",
    "summary_submit_border_width": "4px"
  }
}